@{
    var users = ViewBag.users;
}
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Content" asp-action="Home">Home</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Content" asp-action="MyPosts"><strong>My Posts</strong></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Content" asp-action="Friends">Friends</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Content" asp-action="User">Profile</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
</header>
<button class="btn btn-primary" > <a asp-action="NewPost" asp-controller="Content" style="color:white" >New Post</a> </button>
<div>
    @{
        if ( users!= null)
        {
            foreach (var item in users)
            {
                <div>
                    <img src="@item.media.Replace("wwwroot/", "/")" width="500px" height="500px" />
                    <h3>@item.desc</h3>
                    <a href="/Content/Delete/@item.id">Delete</a>
                </div>
            }

        }
        else
        {
            <h1>bruh, you don't have any posts yet</h1>
        }
    }
</div>