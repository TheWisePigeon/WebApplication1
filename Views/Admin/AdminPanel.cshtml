@{
    var posts = ViewBag.posts as List<Post>;
    var users = ViewBag.users as List<UserModel>;
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Content" asp-action="MyPosts">Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Content" asp-action="Friends">Posts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Content" asp-action="User">Mesages</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
</header>

<h1>Users list</h1>
<div>
    @{ if (users != null)
        {
            foreach (var user in users)
            {
                <p>---------------------</p>
                <p>Mail:@user.Email</p>
                <p>Username:@user.Username</p>
                <p>Gender:@user.Gender</p>
                <p>Bio:@user.Bio</p>
                <a href="/Admin/DeleteAccount?user=@user.Email">Delete Account</a>  <a href="/Admin/ResetAccount?user=@user.Email">Reset Account</a>
            }

        }
    }
</div>
<h1>Every post</h1>
@{
    if (posts != null)
    {
        foreach (var item in posts)
        {
            <div>
                <img src="@item.media.Replace("wwwroot/", "/")" width="500px" height="500px" />
                <h3>@item.desc</h3>
                @{

                    <h4>Posted by @item.poster</h4>
                    <a href="/Admin/DeletePost?id=@item.id">Delete</a>
                }

            </div>
        }

    }
}